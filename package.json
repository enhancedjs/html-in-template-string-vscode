{
    "name": "html-in-template-string",
    "private": true,
    "displayName": "html-in-template-string",
    "description": "Syntax highlighting and IntelliSense for HTML inside of JavaScript and TypeScript tagged with `html` template strings.",
    "version": "0.0.2",
    "publisher": "enhancedjs",
    "icon": "docs/logo.png",
    "license": "MIT",
    "galleryBanner": {
        "color": "#fcfcfc",
        "theme": "light"
    },
    "repository": {
        "url": "https://github.com/enhancedjs/html-in-template-string-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/enhancedjs/html-in-template-string-vscode/issues"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "javascript",
        "typescript",
        "html",
        "template",
        "string"
    ],
    "engines": {
        "vscode": "^1.29.0"
    },
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:javascriptreact",
        "onLanguage:typescript",
        "onLanguage:typescriptreact"
    ],
    "main": "./out/index.js",
    "contributes": {
        "configuration": [
            {
                "id": "lit-html",
                "title": "Lit HTML",
                "properties": {
                    "lit-html.tags": {
                        "type": "array",
                        "description": "List of template tags to enable html intellisense in.",
                        "items": {
                            "type": "string",
                            "description": "Tag name."
                        },
                        "default": [
                            "html",
                            "raw"
                        ]
                    },
                    "lit-html.format.enabled": {
                        "type": "boolean",
                        "description": "Enable/disable formatting of html template strings.",
                        "default": true
                    }
                }
            }
        ],
        "grammars": [
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.lit-html",
                "path": "./syntaxes/lit-html.json",
                "embeddedLanguages": {
                    "meta.embedded.block.html": "html",
                    "meta.embedded.block.css": "css",
                    "source.css": "css"
                }
            },
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.lit-html.string.injection",
                "path": "./syntaxes/lit-html-string-injection.json",
                "embeddedLanguages": {
                    "meta.template.expression.ts": "typescript"
                }
            },
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.lit-html.style.injection",
                "path": "./syntaxes/lit-html-style-injection.json",
                "embeddedLanguages": {
                    "meta.template.expression.ts": "typescript"
                }
            },
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.lit-html-svg",
                "path": "./syntaxes/lit-html-svg.json",
                "embeddedLanguages": {
                    "meta.embedded.block.svg": "xml"
                }
            }
        ],
        "typescriptServerPlugins": [
            {
                "name": "@enhancedjs/typescript-html-plugin",
                "enableForWorkspaceTypeScriptVersions": true
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "jsconfig*.json",
                "url": "./schemas/tsconfig.schema.json"
            },
            {
                "fileMatch": "tsconfig*.json",
                "url": "./schemas/tsconfig.schema.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "test": "node ./out/test"
    },
    "dependencies": {
        "@enhancedjs/typescript-html-plugin": "0.0.3"
    },
    "devDependencies": {
        "@types/node": "^12.12.47",
        "@types/vscode": "1.29.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^3.9.5",
        "vscode-test": "^1.4.0"
    }
}
